<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.laba.mappers.ProductMapper">

    <resultMap id="ProductMap" type="com.solvd.laba.models.Product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
    </resultMap>

    <select id="getProductById" parameterType="long" resultMap="ProductMap">
        SELECT * FROM products WHERE id = #{id}
    </select>

    <select id="getAllProducts" resultMap="ProductMap">
        SELECT * FROM products
    </select>

</mapper>
